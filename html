    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const form = document.getElementById("cadastro-form");
            const nomeInput = document.getElementById("nome");
            const feedbackMessage = document.getElementById("feedback");

            // Acessibilidade: Altera o feedback do formulário de 'alert' para uma mensagem na página
            form.addEventListener("submit", function (event) {
                event.preventDefault(); // Impede o envio padrão do formulário

                if (nomeInput.value.trim() === "") {
                    feedbackMessage.textContent = "Por favor, preencha o campo Nome.";
                    feedbackMessage.classList.add("error");
                    feedbackMessage.classList.remove("success");
                    nomeInput.focus(); // Coloca o foco no campo para que o usuário saiba onde corrigir
                } else {
                    feedbackMessage.textContent = "Obrigado por se voluntariar! Entraremos em contato!";
                    feedbackMessage.classList.add("success");
                    feedbackMessage.classList.remove("error");
                    form.reset(); // Limpa o formulário
                }
            });

            // Acessibilidade: O efeito de hover também deve funcionar para o foco (navegação por teclado)
            let boxes = document.querySelectorAll(".box");
            boxes.forEach(box => {
                box.addEventListener("mouseover", function () {
                    this.style.transform = "scale(1.05)";
                    this.style.transition = "0.3s";
                });
                box.addEventListener("mouseleave", function () {
                    this.style.transform = "scale(1)";
                });
                box.addEventListener("focus", function () {
                    this.style.transform = "scale(1.05)";
                    this.style.transition = "0.3s";
                });
                box.addEventListener("blur", function () {
                    this.style.transform = "scale(1)";
                });
            });

            let images = document.querySelectorAll(".image-container img");
            images.forEach(img => {
                img.addEventListener("mouseover", function () {
                    this.style.transform = "scale(1.05)";
                    this.style.transition = "0.3s";
                });
                img.addEventListener("mouseleave", function () {
                    this.style.transform = "scale(1)";
                });
                img.addEventListener("focus", function () {
                    this.style.transform = "scale(1.05)";
                    this.style.transition = "0.3s";
                });
                img.addEventListener("blur", function () {
                    this.style.transform = "scale(1)";
                });
            });
        });
    </script>
